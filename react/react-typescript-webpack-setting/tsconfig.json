{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "jsx": "react-jsx", // import React from "react" 쓸 필요 없게하기
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // 패키지 import를 Node처럼 한다.
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
      // "src/*": ["./src/*"], // 경로를 별칭으로 사용하게 한다.
      // "public/*": ["./public/*"] // 코드에서 경로 src/app 은 ./src/app 가 된다.
    }
  },
  "include": ["src"]
}
